@using NorexiaGestionCommercialeWebUI.Components.Settings
@using Syncfusion.Blazor.Grids;
@using Syncfusion.Blazor.TreeGrid
@using System.ComponentModel.DataAnnotations
@using Syncfusion.Blazor.Notifications
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups
@using NorexiaGestionCommercialeWebUI.Components

@page "/ClientSettings"

<SettingAppBarComponent />
<PageTitle>Client settings</PageTitle>

<SfTab CssClass="default-tab e-fill">
    <TabAnimationSettings>
        <TabAnimationPrevious Effect=AnimationEffect.None></TabAnimationPrevious>
        <TabAnimationNext Effect=AnimationEffect.None></TabAnimationNext>
    </TabAnimationSettings>
    <TabItems>
        <TabItem>
            <ChildContent>
                <TabHeader Text="Catégories de clients"></TabHeader>
            </ChildContent>
            <ContentTemplate>
                <ClientCategorySettings OnShowErrorToast="ShowErrorToast" OnShowSuccessToast="ShowSuccessToast"></ClientCategorySettings>
            </ContentTemplate>
        </TabItem>
    </TabItems>
</SfTab>

<ToastComponent @ref=Toast></ToastComponent>