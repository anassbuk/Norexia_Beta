@page "/ProductSettings"
@using NorexiaGestionCommercialeWebUI.Components.Settings
@using Syncfusion.Blazor.Grids;
@using Syncfusion.Blazor.TreeGrid
@using System.ComponentModel.DataAnnotations
@using Syncfusion.Blazor.Notifications
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups
@using NorexiaGestionCommercialeWebUI.Components

<SettingAppBarComponent />
<PageTitle>Product settings</PageTitle>

<SfTab CssClass="default-tab e-fill">
    <TabAnimationSettings>
        <TabAnimationPrevious Effect=AnimationEffect.None></TabAnimationPrevious>
        <TabAnimationNext Effect=AnimationEffect.None></TabAnimationNext>
    </TabAnimationSettings>
    <TabItems>
        <TabItem>
            <ChildContent>
                <TabHeader Text="Familles & sous familles"></TabHeader>
            </ChildContent>
            <ContentTemplate>
                <FamilySettings OnShowErrorToast="ShowErrorToast" OnShowSuccessToast="ShowSuccessToast"></FamilySettings>
            </ContentTemplate>
        </TabItem>
        <TabItem>
            <ChildContent>
                <TabHeader Text="Classes"></TabHeader>
            </ChildContent>
            <ContentTemplate>
                <ClassSettings OnShowErrorToast="ShowErrorToast" OnShowSuccessToast="ShowSuccessToast"></ClassSettings>
            </ContentTemplate>
        </TabItem>
        <TabItem>
            <ChildContent>
                <TabHeader Text="Unités"></TabHeader>
            </ChildContent>
            <ContentTemplate>
                <UnitSettings OnShowErrorToast="ShowErrorToast" OnShowSuccessToast="ShowSuccessToast"></UnitSettings>
            </ContentTemplate>
        </TabItem>
    </TabItems>
</SfTab>

<ToastComponent @ref=Toast></ToastComponent>