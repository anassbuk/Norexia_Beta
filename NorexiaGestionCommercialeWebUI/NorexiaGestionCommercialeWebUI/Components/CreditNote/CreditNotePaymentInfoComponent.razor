@using NorexiaGestionCommercialeWebUI.Models
@using NorexiaGestionCommercialeWebUI.Models.PaymentTerms;
@using Syncfusion.Blazor.Grids
@using Norexia.Core.Facade.Client.Sdk
@using Syncfusion.Blazor.Inputs;
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Calendars

<div class="row m-0 my-2 align-items-start justify-content-center">


        <div class="form-group col-auto mt-1 pt-1">
            <SfNumericTextBox @bind-Value=CreditNoteCommand!.PaymentTerms!.MaturityDuration Min=0 TValue=int? FloatLabelType=FloatLabelType.Auto Placeholder="Durée d’échéance (en jrs)">
                <NumericTextBoxEvents ValueChange="MaturityDurationValueChanged" TValue="int?"></NumericTextBoxEvents>
            </SfNumericTextBox>
        </div>

            <div class="form-group col-auto mt-1 pt-1">
                <SfDatePicker @bind-Value=CreditNoteCommand!.DueDate Placeholder='Date d’échéance' FloatLabelType="FloatLabelType.Auto"></SfDatePicker>
                <ValidationMessage For="@(() => CreditNoteCommand!.DueDate)"></ValidationMessage>
            </div>

    </div>

 